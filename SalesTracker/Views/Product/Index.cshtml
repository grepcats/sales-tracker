<div class="container">
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Inventory Total</th>
            <th>Wholesale Price</th>
            <th>Sale Price</th>
            @if (User.IsInRole("Manager"))
            {
                <th>Delete</th>
            }

        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.InventoryTotal</td>
                <td>$@product.WholesalePrice</td>
                <td>$@product.SalePrice</td>
                @if (User.IsInRole("Manager"))
                {
                    <td>@Html.ActionLink("Balete", "Delete", new { id = product.ProductId })</td>
                }

            </tr>

        }
    </table>
</div>